{
  "name": "@bristena-op/opencode-handoff",
  "version": "1.0.2",
  "description": "OpenCode plugin for seamless session continuation when context windows fill up",
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bristena-op/opencode-handoff.git"
  },
  "bugs": {
    "url": "https://github.com/bristena-op/opencode-handoff/issues"
  },
  "homepage": "https://github.com/bristena-op/opencode-handoff#readme",
  "keywords": [
    "opencode",
    "opencode-plugin",
    "handoff",
    "session",
    "context-window",
    "continuation"
  ],
  "author": "bristena-op",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "oxlint -c oxlint.json .",
    "lint:fix": "oxlint -c oxlint.json --fix .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "tsdown",
    "check": "bun run format:check && bun run lint && bun run typecheck && bun run test",
    "prepublishOnly": "bun run check && bun run build",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "biome format --write"
    ],
    "*.json": [
      "biome format --write"
    ]
  },
  "dependencies": {
    "@opencode-ai/plugin": "1.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@types/node": "^25.0.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.41.0",
    "tsdown": "^0.20.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
